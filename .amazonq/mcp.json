{
    "mcpServers": {
      "awslabs.eks-mcp-server": {
        "command": "uvx",
        "args": [
          "awslabs.eks-mcp-server@latest",
          "--allow-write",
          "--allow-sensitive-data-access"
        ],
        "env": {
          "FASTMCP_LOG_LEVEL": "ERROR"
        },
        "autoApprove": [
          "manage_eks_stacks",
          "manage_k8s_resource",
          "list_k8s_resources",
          "get_pod_logs",
          "get_k8s_events",
          "get_cloudwatch_logs",
          "get_cloudwatch_metrics",
          "get_policies_for_role",
          "search_eks_troubleshoot_guide",
          "list_api_versions"          
        ],
        "disabled": false
      }
  }
}